<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_editor_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editor.EditorFragment">

    <!-- 顶部标题栏：左返回，中标题，右保存 -->
    <LinearLayout
        android:id="@+id/layout_editor_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 左上：返回 -->
        <ImageButton
            android:id="@+id/btn_editor_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_media_previous" />

        <!-- 中间：标题，占满中间空间 -->
        <TextView
            android:id="@+id/tv_editor_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="编辑图片"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <!-- 右上：保存（将来可以换成 icon） -->
        <ImageButton
            android:id="@+id/btn_editor_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/app_name"
            android:src="@android:drawable/ic_menu_save" />
    </LinearLayout>

    <!-- 中间画布区域：图片 + 裁剪遮罩
         顶部挨着 header，底部挨着统一底部面板 -->
    <FrameLayout
        android:id="@+id/editor_canvas_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/layout_editor_header"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 底层：可缩放/拖动的图片画布 -->
        <com.owenzx.lightedit.ui.editor.view.ZoomableImageView
            android:id="@+id/image_edit_canvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- 上层：裁剪遮罩（裁剪模式时显示） -->
        <com.owenzx.lightedit.ui.editor.crop.CropOverlayView
            android:id="@+id/crop_overlay_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_bottom_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 上部：模式控制容器（内部一次只显示一个 LinearLayout） -->
        <FrameLayout
            android:id="@+id/layout_mode_controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 裁剪模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_crop_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <!-- 第一行：可横向滚动的裁剪比例选项 -->
                <HorizontalScrollView
                    android:id="@+id/scroll_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_crop_ratio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_ratio_free"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="自由"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="1:1"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="4:3"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_16_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="16:9"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="3:4"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn_ratio_9_16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:text="9:16" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- 第二行：取消 - 裁剪 - 确认 -->
                <LinearLayout
                    android:id="@+id/layout_crop_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="2dp">

                    <Button
                        android:id="@+id/btn_crop_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_crop_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="裁剪"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_crop_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>

            <!-- 旋转/翻转模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_rotate_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <!-- 第一行：可横向滚动的旋转/翻转按钮 -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_rotate_action_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_rotate_left_90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="左转90°"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_rotate_right_90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="右转90°"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_rotate_180"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="旋转180°"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_flip_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="水平翻转"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_flip_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="64dp"
                            android:paddingHorizontal="10dp"
                            android:text="垂直翻转" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- 第二行：取消 - 旋转与翻转 - 确认 -->
                <LinearLayout
                    android:id="@+id/layout_rotate_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp">

                    <Button
                        android:id="@+id/btn_rotate_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_rotate_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="旋转与翻转"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_rotate_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>

            <!-- 调色模式控制条 -->
            <LinearLayout
                android:id="@+id/layout_adjust_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <!-- 第 0 行：对比按钮（按住看原图，松手看调色后） -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="4dp">

                    <Button
                        android:id="@+id/btn_adjust_compare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按住对比原图" />
                </LinearLayout>

                <!-- 第 1 行：亮度 / 对比度滑条 -->
                <LinearLayout
                    android:id="@+id/layout_adjust_sliders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/tv_brightness_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度"
                            android:layout_marginEnd="8dp" />

                        <SeekBar
                            android:id="@+id/seek_brightness"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_brightness_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/tv_contrast_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对比度"
                            android:layout_marginEnd="8dp" />

                        <SeekBar
                            android:id="@+id/seek_contrast"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_contrast_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 第 2 行：亮度 / 对比度快捷按钮 -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/layout_adjust_presets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/btn_adjust_reset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重置"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_brightness_minus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度 -20"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_brightness_plus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亮度 +20"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_contrast_minus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对比度 -20"
                            android:layout_marginEnd="4dp" />

                        <Button
                            android:id="@+id/btn_contrast_plus_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对比度 +20" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- 第 3 行：取消 - 调色 - 确认 -->
                <LinearLayout
                    android:id="@+id/layout_adjust_bottom_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="6dp">

                    <Button
                        android:id="@+id/btn_adjust_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取消" />

                    <TextView
                        android:id="@+id/tv_adjust_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="调色"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_adjust_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- 下部：普通编辑模式的主工具栏（Tab） -->
        <LinearLayout
            android:id="@+id/layout_editor_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <Button
                android:id="@+id/btn_tool_crop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="裁剪" />

            <Button
                android:id="@+id/btn_tool_rotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="旋转" />

            <Button
                android:id="@+id/btn_tool_adjust"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="调色" />

            <Button
                android:id="@+id/btn_tool_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文字" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
